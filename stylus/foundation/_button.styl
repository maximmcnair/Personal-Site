// Button Styling
.btn
  padding: 17px 30px
  font-size: 14px
  border: 2px solid $color-white
  display: inline-block
  margin-top: 30px
  text-transform: uppercase
  border-radius: 5px
  font-weight: 700
  cursor: pointer
  transition: all .3s
  &:hover
    color: $color-blue
    background: $color-orange
    border-color: $color-orange