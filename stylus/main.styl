//==============================================================================
//  Reset and structural design
//==============================================================================
global-reset()

html
  box-sizing border-box

*
*:before
*:after
  box-sizing inherit

clearfix()
  // micro clearfix hack by Nicolas Gallagher
  // For modern browsers
  &:before
  &:after
      content ""
      display table
  &:after
      clear both
  // For IE 6/7 (trigger hasLayout)
  *zoom 1

html
body
  background #1B1E26

img
video
  max-width 100%
  height auto

.content
  width 90%
  max-width 700px
  margin 100px auto 0 auto
  transition opacity .3s

.wf-loading
  .content
    opacity 0

.wf-active
  .content
    opacity 1


//==============================================================================
//  Typography
//==============================================================================
body
  color #9093A0
  font-family "brandon-grotesque", "Helvetica Neue", sans-serif
  font-size 18px
  line-height 27px
  margin 0 0 20px 0

h2
  font-size 34px
  line-height 48px
  font-weight 200
  color #ffffff
  margin-bottom 10px

h3
  font-size 34px
  line-height 48px
  font-weight 200

a
a:visited
  color #ffffff
  text-decoration none
  cursor pointer
  transition all .3s ease

small
  font-size 14px

::selection
  background #9093A0
  color #1B1E26

::-moz-selection
  background #9093A0
  color #1B1E26

//==============================================================================
//  Buttons
//==============================================================================
.btn
a.btn
  font-weight 700
  font-size 12px
  text-transform uppercase
  text-decoration none
  text-align center
  padding 4px 18px 2px 18px
  margin-top 20px
  display inline-block
  cursor pointer
  border-radius 3px
  color #1B1E26
  background #444755
  &:hover
    background #ffffff

//==============================================================================
//  Utilities
//==============================================================================
.u-amp
  font-family Baskerville, 'Goudy Old Style', Palatino, 'Book Antiqua', serif
  font-style italic

//==============================================================================
//  Intro Statement
//==============================================================================
.intro
  // display none
  // &.is-visible
  display block
  margin-bottom 190px

.intro-title
  margin-bottom 45px

//==============================================================================
//  Social
//==============================================================================
.social-icons
  svg
  path
    transition fill .4s ease
    fill #444755
  a
    margin-right 15px
    &:hover
      svg
      path
        fill #ffffff

//==============================================================================
//  Nav
//==============================================================================
.nav
  display none

.nav-projects
  list-style-type none
  line-height 35px
  clearfix()
  span
    color rgba(144, 147, 160, 0.5)

.nav-title
  margin-bottom 15px

.nav-work-link
  width 50%
  float left
  font-size 16px
  font-weight 800
  text-transform uppercase
  margin-bottom 17px
  line-height 26px
  display block

.nav-work-type
  display block
  text-transform capitalize
  font-weight 400

.work-desc
  position relative

.work-desc-btn
a.work-desc-btn
  position absolute
  top 0px
  right 0px
  margin 5px 0px 0px 0px

//==============================================================================
//  Projects
//==============================================================================
.work
  // display none
  margin-bottom 155px
  clearifx()
  // &.is-visible
  display block

.work-media
  margin-bottom 17px
  position relative

.work-desc-title
  margin-bottom 10px

.work-desc-type
  display block
  text-transform uppercase
  font-weight 400
  color rgba(144, 147, 160, 0.5)
  margin-top 10px
  li
    display inline-block
    font-size 14px
    font-weight 800
    margin-right 15px

.work-featured
  margin-top 10px
  clearfix()

.work-featured-bbc
.work-featured-designweek
.work-featured-theguardian
  margin-right 15px

//==============================================================================
//  Footer
//==============================================================================
.footer-text
  color rgba(144, 147, 160, 0.5)
  display block
  text-align center
  a
    color rgba(#ffffff, 0.5)

