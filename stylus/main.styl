global-reset()

html
  background #ffffff

.page
  background #f5eeee
  // position relative

.content
  background #f5eeee
  top 10px
  left 10px
  right 10px
  bottom 10px
  display block
  position absolute
  padding 50px
  h1
    max-width 950px

body
  color #939191
  font-size 55px
  font-family "adobe-caslon-pro-1", "adobe-caslon-pro-2"

h1
  font-size 55px
  line-height 70px

a
  font-style italic
  color #5a5959
  transition color .6s
  &:hover
    color #454545

.social
  position absolute
  bottom 20px
  a
    font-size 16px
    margin-right 25px
    text-decoration none
    &:hover
      text-decoration underline

@media screen and (max-width: 500px)
  .content
    padding 25px
  h1
    font-size 16px
    line-height 28px
  .social
    bottom 0px
    a
      font-size 15px
      margin-right 5px

@media screen and (min-width: 500px) and (max-width: 900px)
  h1
    font-size 40px
    line-height 51px

@media screen and (min-width: 900px)
  .content
    padding 50px
  h1
    font-size 55px
    line-height 70px
